<% layout("/layouts/boilerplate")%>

<div class="row mt-3">
    <h3 class="col-6 offset-3">Login on Spend Smart</h3>
    <div class="col-6 offset-3"><br>
        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="mb-3" >
                <label for="username" class="form-label">Username</label>
            <input name="username" id="username" placeholder="add username" class="form-control" required>
            </div>

            <div class="mb-3" >
                <label for="password" class="form-label">Password</label>
            <input name="password" id="password" placeholder="add password" type="password" class="form-control" required>
            </div>

            <button class="btn btn-dark mb-3">Login</button>

            <div class="mb-3">
                <p>Don't have an account?<a href="/signup">SignUp</a></p>
            </div>
        </form>
    </div>

    
</div>