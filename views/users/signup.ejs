<% layout("/layouts/boilerplate")%>

<div class="row mt-3">
    <h3 class="col-6 offset-3">SignUp on Spend Smart</h3>
    <div class="col-6 offset-3"><br>
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3" >
                <label for="username" class="form-label">Username</label>
            <input name="username" id="username" placeholder="add username" class="form-control" required>
            <div class="valid-feedback">
                username is unique
              </div>
            </div>

            <div class="mb-3" >
                <label for="email" class="form-label">Email</label>
            <input name="email" id="email" placeholder="add email" type="email" class="form-control" required>
            </div>

            <div class="mb-3" >
                <label for="password" class="form-label">Password</label>
            <input name="password" id="password" placeholder="add password" type="password" class="form-control" required>
            </div>

            <button class="btn btn-dark mb-3">SignUp</button>

            <div class="mb-3">
                <p>Already have an account?<a href="/login">Login</a></p>
            </div>
        </form>
    </div>

    
</div>